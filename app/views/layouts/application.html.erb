<!DOCTYPE html>
<html>
  <head>
    <title>Project Octopus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
        <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" %>

  </head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

      <!-- Sidebar - Brand -->
      <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
        <div class="sidebar-brand-icon rotate-n-15">
          <%= image_tag("octopus-logo.svg", {:style => "width:30px; padding-top:10px; margin-right:-10px; -webkit-transform: rotate(12.5deg);"})  %>

        </div>
        <div class="sidebar-brand-text mx-3">Octopus</div>
      </a>

      <!-- Divider -->
      <hr class="sidebar-divider my-0">

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <% if current_user.present? %>
      <div>

          <!-- Heading -->
     <br> <div class="sidebar-heading">
        Reports
      </div>

    <!-- Nav Item - Dashboard -->
          <li class="nav-item" >                  
             <%= link_to(root_path, class: 'nav-link') do %> 
             <i class="fas fa-fw fa-home"></i>
             <span>Home</span>
             <% end %>
         </li>

          <li class="nav-item" >         
             <%= link_to(sites_path, class: 'nav-link') do %> 
             <i class="fas fa-fw fa-briefcase"></i>
             <span>Sites</span>
             <% end %>
         </li>

          <li class="nav-item" >         
             <%= link_to(students_path, class: 'nav-link') do %> 
            <i class="fas fa-fw fa-user-graduate"></i>
             <span>Students</span>
             <% end %>
         </li>

        
          <li class="nav-item" >         
             <%= link_to(contacts_path, class: 'nav-link') do %> 
              <i class="fas fa-fw fa-address-card"></i>
             <span>Contacts</span>
             <% end %>
         </li>     
         
                  <!-- Divider -->
      <hr class="sidebar-divider my-0">


                   <!-- Heading -->
      <br><div class="sidebar-heading">
        Settings
      </div> 

          <li class="nav-item" >         
             <%= link_to(user_accounts_path, class: 'nav-link') do %> 
              <i class="fas fa-users"></i>
             <span>Users</span>
             <% end %>
         </li> 

                        <!-- Divider -->
      <hr class="sidebar-divider my-0">  

                   <!-- Heading -->
     <br> <div class="sidebar-heading">
        Account
      </div> 


          <li class="nav-item" >         
             <%= link_to(edit_user_registration_path, class: 'nav-link') do %> 
             <i class="fas fa-fw fa-user-cog"></i>
             <span>Settings</span>
             <% end %>
         </li> 

          <li class="nav-item" >         
             <%= link_to( destroy_user_session_path, method: :delete, class: 'nav-link') do %> 
              <i class="fas fa-sign-out-alt"></i>
