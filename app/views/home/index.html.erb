<div style="text-align: center">
  <h1>
    <span style="color:#666">CODE</span>
    <span style="color:#03c9a9" >4000</span>
    sites by region
  </h1>
<p>Currently showing 5 busiest regions</p>
<% if Site.count != 0 %>
  <h2><%= link_to 'All', sites_path %></h2>
  <ul>
    <% @all_sites.each do |site| %>
      <li><%= link_to site.name, site_path(site) %></li>
    <% end %>
  </ul>

  <% @most_popular_tags.each do |tag_name, sites| %>
    <h2><%= link_to tag_name, sites_path(region_list: [tag_name]) %></h2>
    <ul>
      <% sites.each do |site| %>
        <li><%= link_to site.name, site_path(site) %></li>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <div>
    <% if can? :create, Site %>
      <%= link_to 'Add sites', new_site_path,  class:"btn btn-info" %>
    <% else %>
      Please add sites
    <% end %>
  </div>
<% end %>
</div>