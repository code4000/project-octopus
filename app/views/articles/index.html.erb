<h1>Articles</h1>
<div><%= link_to 'View all', articles_path %></div>
<div><%= link_to 'Create article', new_article_path if can? :create, Article %></div>

<table class="table">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Published</th>
    <th>Publish date</th>
    <th>Created at</th>
    <th>Last upddated</th>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.user.name %></td>
        <td><%= article.publish ? (fa_icon "check") : (fa_icon "times") %></td>
        <td> <%= l article.published_at %></td>
        <td><%= l article.created_at %></td>
        <td><%= l article.updated_at %></td>
      </tr>
    <% end %>
</tbody>
</table>
