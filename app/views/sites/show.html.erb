<h1><%= @site.name %></h1>
<table class="table">
  <thead>
    <th>Name</th>
    <th>Prison number</th>
    <th>Release date</th>
    <th>Eligable for tag</th>
    <th>Eligable for ROTL</th>
    <th>Next recategorisation</th>
  </thead>
  <tbody>
    <% @site.students.each do |student| %>
        <tr>
          <th><%= link_to student.name, student_path(student) %></th>
          <td><%= student.prison_number %></td>
          <td><%= l student.crd %></td>
          <td><%= l student.hdc if student.hdc.present? %></td>
          <td><%= l student.rotl %></td>
          <td><%= l student.recat %></td>
        </tr>
    <% end %>
  </tbody>
</table>
